<div class="col">
  <a href="{% if horror_story.redirect %}{{ horror_story.redirect }}{% else %}{{ horror_story.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if horror_story.img %}
        {%
          include figure.liquid
          loading="eager"
          path=horror_story.img
          sizes = "250px"
          alt="horror_story thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ horror_story.title }}</h2>
        <p class="card-text">{{ horror_story.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if horror_story.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ horror_story.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if horror_story.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ horror_story.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
